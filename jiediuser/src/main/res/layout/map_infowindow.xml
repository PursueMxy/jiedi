<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:layout_marginBottom="@dimen/dp_15">
  <TextView
      android:id="@+id/infowindow_tv_content"
      android:padding="@dimen/dp_8"
      android:textColor="@color/ffff383f"
      android:textSize="@dimen/sp_14"
      android:text=""
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView
      android:lines="1"
      android:id="@+id/infowindow_tv_distance"
      android:layout_marginLeft="@dimen/dp_5"
      android:layout_marginTop="@dimen/dp_5"
      android:textSize="@dimen/sp_12"
      android:textColor="@color/ff5181fb"
      android:text="距离终点 7.8公里"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <TextView
      android:layout_marginBottom="@dimen/dp_5"
      android:lines="1"
      android:layout_below="@+id/infowindow_tv_distance"
      android:id="@+id/infowindow_tv_duration"
      android:layout_marginLeft="@dimen/dp_5"
      android:layout_marginTop="@dimen/dp_5"
      android:textSize="@dimen/sp_12"
      android:textColor="@color/ff5181fb"
      android:text="距离终点 7.8公里"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/infowindow_tv_distance"
      android:layout_alignTop="@+id/infowindow_tv_distance"
      android:layout_alignBottom="@+id/infowindow_tv_duration"
        android:background="@mipmap/icon_horizontal_divider"
        android:layout_width="@dimen/dp_2"
        android:layout_height="match_parent"/>

  <TextView
      android:layout_marginRight="@dimen/dp_10"
      android:id="@+id/infowindow_tv_price"
      android:drawablePadding="@dimen/dp_8"
      android:drawableRight="@mipmap/icon_right_red"
      android:layout_toRightOf="@+id/infowindow_tv_distance"
      android:layout_marginLeft="@dimen/dp_20"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="9.0元"
      android:layout_centerVertical="true"
      android:textColor="@color/ffff383f"
      android:textSize="@dimen/sp_14"
      />
</RelativeLayout>
