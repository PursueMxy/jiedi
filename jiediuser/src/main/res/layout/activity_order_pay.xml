<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.OrderPayActivity">
    <RelativeLayout
        android:id="@+id/price_rl_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

        <ImageView
            android:id="@+id/order_pay_img_back"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="订单"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <RelativeLayout
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_94">
        <TextView
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闽A3NS45"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/order_pay_tv_car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝色本田"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_toRightOf="@+id/order_pay_tv_car_brand"
            android:layout_marginTop="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/order_pay_tv_carname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张师傅"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_toRightOf="@+id/order_pay_tv_carname"
            android:layout_marginTop="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="465单"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_head_portrait"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@drawable/bg_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_176">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥21.50"
                android:textColor="@color/ff707070"
                android:textSize="@dimen/sp_15"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/ffefeff4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/icon_right"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择优惠券"
                android:textColor="@color/ff707070"
                android:textSize="@dimen/sp_15"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/ffefeff4"/>

        <TextView
            android:layout_marginTop="@dimen/dp_9"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥21.50"
            android:textColor="@color/ffff383f"
            android:textSize="@dimen/sp_30"
            />
        <TextView
            android:drawablePadding="@dimen/dp_8"
            android:drawableRight="@mipmap/icon_right"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用明细"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_136">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_balancepay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前余额 ￥200"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_cb_select"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/ffefeff4"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_alipay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_cb_no"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/ffefeff4"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_wechatpay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_cb_no"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dp_64"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/bg_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />
</LinearLayout>