<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MyCouponActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

        <ImageView
            android:id="@+id/my_coupon_img_back"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="优惠券"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RadioGroup
        android:background="@color/white"
        android:id="@+id/my_coupon_radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RadioButton
            android:textColor="@color/ff5181fb"
            android:textSize="@dimen/sp_15"
            android:id="@+id/my_coupon_radiobutton_whole"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_choosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="全部"/>

        <RadioButton
            android:id="@+id/my_coupon_radiobutton_out_used"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="未使用"/>
        <RadioButton
            android:id="@+id/my_coupon_radiobutton_already_used"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="已使用"/>
        <RadioButton
            android:id="@+id/my_coupon_radiobutton_expired"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="已过期"/>
    </RadioGroup>
    <com.zhouyou.recyclerview.XRecyclerView
        android:id="@+id/my_coupon_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.zhouyou.recyclerview.XRecyclerView>
</LinearLayout>