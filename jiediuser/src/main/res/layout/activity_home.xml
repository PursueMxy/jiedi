<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.amap.api.maps.MapView
        android:id="@+id/home_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">
        <ImageView
            android:id="@+id/home_top_img_left"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_tope_left"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_21" />
        <TextView
            android:text="捷滴出行"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_cleam"
            android:layout_marginRight="@dimen/left_size"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_21" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/top_height"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RadioGroup
            android:background="@color/white"
            android:id="@+id/home_radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <RadioButton
                android:textColor="@color/ff5181fb"
                android:textSize="@dimen/sp_15"
                android:id="@+id/home_radiobutton_inside_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:background="@drawable/myorder_choosed_color"
                android:button="@null"
                android:gravity="center"
                android:textStyle="bold"
                android:text="城内出行"/>

            <RadioButton
                android:id="@+id/home_radiobutton_intercity"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:background="@drawable/myorder_nochoosed_color"
                android:button="@null"
                android:gravity="center"
                android:textStyle="bold"
                android:text="城际出行"/>
            <RadioButton
                android:id="@+id/home_radiobutton_transfer"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:background="@drawable/myorder_nochoosed_color"
                android:button="@null"
                android:gravity="center"
                android:textStyle="bold"
                android:text="接送机"/>

        </RadioGroup>
    </RelativeLayout>

    <ImageView
        android:layout_above="@+id/home_ll_city_type"
        android:id="@+id/home_img_safety"
        android:layout_marginTop="@dimen/dp_410"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/icon_safe"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_54" />
    <LinearLayout
        android:layout_above="@+id/home_ll_lnside_city"
        android:id="@+id/home_ll_city_type"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/icon_bluewhite"
        android:layout_width="@dimen/dp_155"
        android:layout_height="@dimen/dp_36">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="现在"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="预约"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_ll_lnside_city"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:drawableLeft="@mipmap/icon_alarm"
            android:text="今天14:10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/home_edt_flight_number"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_plane"
                    android:hint="请输入航班号"
                    android:textColor="@color/ff707070"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/ffefeff4"
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:drawableLeft="@mipmap/icon_alarm"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:hint="飞机到达时间"
                android:textColor="@color/ff707070"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/home_tv_startingpoint"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_18"
            android:drawableLeft="@mipmap/icon_oval_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="厦门国贸大厦西北侧"
            android:textColor="@color/ff5181fb"
            android:textSize="@dimen/sp_14"
            />
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/ffefeff4"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            />
        <TextView
            android:id="@+id/home_tv_destination"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_20"
            android:drawableLeft="@mipmap/icon_oval_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="你要去哪里"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"/>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="@dimen/dp_285"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white" >
      <LinearLayout
          android:background="@mipmap/icon_blue"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_225">
        <TextView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捷滴出行"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            />
        
        <com.icarexm.jiediuser.custview.CircleImageView
            android:src="@mipmap/icon_head_portrait"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64" />

        <TextView
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            />
          <TextView
              android:id="@+id/home_tv_edt_materials"
              android:layout_marginLeft="@dimen/dp_24"
              android:drawablePadding="@dimen/dp_3"
              android:drawableLeft="@mipmap/icon_edt_means"
              android:layout_marginTop="@dimen/dp_7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="编辑资料"
              android:textColor="@color/white"
              android:textSize="@dimen/sp_15"
              />
      </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_225"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:drawableLeft="@mipmap/icon_home_order"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_home_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的钱包"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_home_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息中心"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_home_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐有奖"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_home_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
            <TextView
                android:drawablePadding="@dimen/dp_13"
                android:drawableLeft="@mipmap/icon_home_left"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_119"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计费规则说明"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>