<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53">
        <TextView
            android:id="@+id/dialog_reserce_time_back"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:text="取消"
            android:layout_centerVertical="true"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="请选择性别"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_reserce_time_confirm"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:text="确定"
            android:layout_centerVertical="true"
            android:textColor="@color/ff5181fb"
            android:textSize="@dimen/sp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.icarexm.jiediuser.custview.mywheel.MyWheelView
        android:id="@+id/dialog_gender_wheel_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_15"
        />
</LinearLayout>
