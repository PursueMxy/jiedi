<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_login_bg"
    android:orientation="vertical"
    tools:context=".view.activity.ForgetPasswordActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/top_height">
       <ImageView
           android:id="@+id/forget_psw_img_back"
           android:layout_marginLeft="@dimen/left_size"
           android:layout_centerVertical="true"
           android:src="@mipmap/icon_left"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>

    <ImageView
        android:id="@+id/forget_psw_img_head_portrait"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@mipmap/icon_head_portrait"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
    <TextView
        android:layout_marginTop="@dimen/dp_18"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30"
        />

    <TextView
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="捷滴出行"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48"
        />

    <RelativeLayout
        android:layout_marginLeft="@dimen/left_size"
        android:layout_marginRight="@dimen/Right_size"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <EditText
            android:background="@null"
            android:hint="手机号码"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/ff707070"
            android:inputType="text"
            android:id="@+id/forget_psw_edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/left_size"
        android:layout_marginRight="@dimen/Right_size"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="@dimen/dp_225"
            android:layout_height="match_parent">
        <EditText
            android:background="@null"
            android:hint="验证码"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/ff707070"
            android:inputType="textPassword"
            android:id="@+id/forget_psw_edt_verification_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </RelativeLayout>

        <Button
            android:id="@+id/forget_psw_btn_gain_verification_code"
            android:layout_marginLeft="@dimen/dp_235"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:background="@color/ffff383f"
            android:layout_width="@dimen/dp_95"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/left_size"
        android:layout_marginRight="@dimen/Right_size"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <EditText
            android:background="@null"
            android:hint="新密码"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/ff707070"
            android:inputType="textPassword"
            android:id="@+id/forget_psw_edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <Button
        android:id="@+id/forget_psw_btn_confirm_update"
        android:layout_marginTop="@dimen/dp_51"
        android:text="确认修改"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_marginLeft="@dimen/left_size"
        android:layout_marginRight="@dimen/Right_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52" />
</LinearLayout>