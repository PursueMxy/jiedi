<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/icon_alipay"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34" />
    <TextView
        android:id="@+id/list_withdraw_type_tv_type"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_below="@+id/list_withdraw_type_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123****1212"
        android:textColor="@color/ff707070"
        android:textSize="@dimen/sp_12"
        />

     <Button
         android:layout_marginRight="@dimen/dp_10"
         android:layout_centerVertical="true"
         android:background="@drawable/btn_back"
         android:textSize="@dimen/sp_14"
         android:textColor="@color/white"
         android:text="删除"
         android:layout_alignParentRight="true"
         android:layout_width="@dimen/dp_62"
         android:layout_height="@dimen/dp_30" />
</RelativeLayout>
