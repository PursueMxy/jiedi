<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.PersonalActivity">
    <RelativeLayout
        android:id="@+id/personal_rl_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

        <ImageView
            android:id="@+id/personal_img_back"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/fff2f2f2"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">

        <com.icarexm.jiedi.custView.CircleImageView
            android:id="@+id/personal_img_head_portrait"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_head_portrait"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />
        <TextView
            android:id="@+id/personal_tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/personal_img_head_portrait"
            android:layout_alignTop="@+id/personal_img_head_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张师傅"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/personal_tv_phone"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/personal_img_head_portrait"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18012365587"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/personal_tv_licenseplate"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/personal_img_head_portrait"
            android:layout_alignBottom="@+id/personal_img_head_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闽D88888"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_14"
            />

           <TextView
               android:textSize="@dimen/sp_6"
               android:background="@mipmap/personal_blue"
               android:drawableTop="@mipmap/icon_shape"
               android:text="5.0"
               android:textColor="@color/white"
               android:gravity="center"
               android:layout_alignRight="@+id/personal_img_head_portrait"
               android:layout_alignBottom="@+id/personal_img_head_portrait"
               android:layout_width="@dimen/dp_21"
               android:layout_height="@dimen/dp_21" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_27"
        android:id="@+id/personal_rl_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:drawableLeft="@mipmap/personal_order"
            android:text="订单"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/ffefeff4"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_27"
        android:id="@+id/personal_rl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:drawableLeft="@mipmap/personal_price"
            android:text="钱包"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/ffefeff4"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_27"
        android:id="@+id/personal_rl_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:drawableLeft="@mipmap/personal_message"
            android:text="客服"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/ffefeff4"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_27"
        android:id="@+id/personal_rl_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:drawableLeft="@mipmap/personal_set"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/ffefeff4"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_107"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平台规则"
        android:textColor="@color/ff5181fb"
        android:textSize="@dimen/sp_15"
        />
</LinearLayout>