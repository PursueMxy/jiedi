<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.PersonalActivity">
    <RelativeLayout
        android:id="@+id/personal_rl_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

        <ImageView
            android:id="@+id/personal_img_back"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/fff2f2f2"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">

        <ImageView
            android:id="@+id/personal_img_head_portrait"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_head_portrait"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/personal_img_head_portrait"
            android:layout_alignTop="@+id/personal_img_head_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张师傅"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/personal_img_head_portrait"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18012365587"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/personal_img_head_portrait"
            android:layout_alignBottom="@+id/personal_img_head_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闽D88888"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>
</LinearLayout>