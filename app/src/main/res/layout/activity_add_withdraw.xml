<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ffefeff4"
    tools:context=".view.activity.AddWithdrawActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

        <ImageView
            android:id="@+id/with_draw_add_img_back"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="新增"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加支付方式"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请添加相关的支付方式"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_164"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            />

        <EditText
            android:id="@+id/add_withdraw_edt_withdrawal_type"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入提现方式类型"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_12"
            />

        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/ffefeff4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2" />

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            />

        <EditText
            android:background="@null"
            android:id="@+id/add_withdraw_edt_withdrawal_account"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入相关账号"
            android:textColor="@color/ff707070"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/add_withdraw_btn_confirm"
            android:textSize="@dimen/sp_16"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:text="确 认"
            android:background="@drawable/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45" />
    </RelativeLayout>
</LinearLayout>