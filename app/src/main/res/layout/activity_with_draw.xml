<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.WithDrawActivity">
    <LinearLayout
        android:background="@drawable/bg_whtie"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

        <ImageView
            android:id="@+id/with_draw_img_back"
            android:layout_marginLeft="@dimen/left_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="提现"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的银行卡"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:id="@+id/withdraw_tv_add"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="@color/ff5181fb"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/withdraw_rl_withdrawtype"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/icon_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_109">
        <ImageView
            android:src="@mipmap/icon_cacler_cache_home"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26" />
        <TextView
            android:id="@+id/withdraw_tv_type"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建设银行"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/withdraw_tv_account"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尾号1234"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现金额"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        />
     <RelativeLayout
         android:layout_marginTop="@dimen/dp_10"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <EditText
             android:id="@+id/with_draw_tv_money"
             android:layout_marginLeft="@dimen/dp_15"
             android:background="@null"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="请输入提现金额"
             android:textColor="#ff5181fb"
             android:textSize="@dimen/sp_30"
             android:textStyle="bold"
             />

         <ImageView
             android:layout_centerVertical="true"
             android:scaleType="fitXY"
             android:layout_marginRight="@dimen/dp_15"
             android:layout_alignParentRight="true"
             android:src="@mipmap/icon_delete"
             android:layout_width="@dimen/dp_18"
             android:layout_height="@dimen/dp_18" />
     </RelativeLayout>

    <ImageView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@drawable/ffefeff4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2" />

    <TextView
        android:id="@+id/with_draw_tv_balance_money"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余额:122.00元"
        android:textColor="@color/ff707070"
        android:textSize="@dimen/sp_15"
        android:layout_marginBottom="@dimen/dp_15"
        />
    </LinearLayout>
        <Button
            android:id="@+id/withdraw_btn_confirm"
            android:textSize="@dimen/sp_16"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:text="确 认 提 现"
            android:background="@drawable/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45" />
</RelativeLayout>