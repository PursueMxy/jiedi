<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_login_bg"
    android:orientation="vertical"
    tools:context=".view.activity.LoginActivity">

     <com.icarexm.jiedi.custView.CircleImageView
         android:id="@+id/login_img_head_portrait"
         android:layout_gravity="center"
         android:layout_marginTop="@dimen/dp_61"
         android:src="@mipmap/icon_head_portrait"
         android:layout_width="@dimen/dp_60"
         android:layout_height="@dimen/dp_60" />
     <TextView
         android:layout_marginTop="@dimen/dp_18"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="欢迎登录"
         android:textColor="@color/white"
         android:textSize="@dimen/sp_30"
         />

     <TextView
         android:layout_gravity="center"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="捷滴出行"
         android:textColor="@color/white"
         android:textSize="@dimen/sp_48"
         />

     <RelativeLayout
         android:layout_marginLeft="@dimen/left_size"
         android:layout_marginRight="@dimen/Right_size"
         android:layout_marginTop="@dimen/dp_31"
         android:background="@color/white"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_52">
          <EditText
              android:background="@null"
              android:hint="手机号码"
              android:gravity="center|left"
              android:layout_marginLeft="@dimen/dp_20"
              android:textSize="@dimen/sp_14"
              android:textColor="@color/ff707070"
              android:id="@+id/login_edt_mobile"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
     </RelativeLayout>

     <RelativeLayout
         android:layout_marginLeft="@dimen/left_size"
         android:layout_marginRight="@dimen/Right_size"
         android:layout_marginTop="@dimen/dp_10"
         android:background="@color/white"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_52">
          <EditText
              android:background="@null"
              android:hint="密码"
              android:gravity="center|left"
              android:layout_marginLeft="@dimen/dp_20"
              android:textSize="@dimen/sp_14"
              android:textColor="@color/ff707070"
              android:inputType="textPassword"
              android:id="@+id/login_edt_password"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
     </RelativeLayout>
     <RelativeLayout
         android:layout_marginLeft="@dimen/left_size"
         android:layout_marginRight="@dimen/Right_size"
         android:layout_marginTop="@dimen/dp_10"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <TextView
              android:id="@+id/login_tv_logon"
              android:text="注册账号"
              android:textColor="@color/white"
              android:textSize="@dimen/sp_16"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/login_tv_forget_psw"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="忘记密码？"
              android:textColor="@color/white"
              android:textSize="@dimen/sp_16"
              />
     </RelativeLayout>

     <Button
         android:id="@+id/login_btn_login"
         android:layout_marginTop="@dimen/dp_81"
         android:text="登录"
         android:textSize="@dimen/sp_16"
         android:textColor="@color/white"
         android:background="@drawable/btn_login"
         android:layout_marginLeft="@dimen/left_size"
         android:layout_marginRight="@dimen/Right_size"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_52" />

     <TextView
         android:layout_gravity="center"
         android:layout_marginTop="@dimen/dp_26"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="联系客服"
         android:textColor="@color/white"
         android:textSize="@dimen/sp_16"
         />
</LinearLayout>